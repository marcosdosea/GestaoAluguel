@using GestaoAluguelWeb.Models
@model IEnumerable<ChamadoReparoModel>

@{
    ViewData["Title"] = "Chamados de reparo";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-tools me-2"></i> Chamados de Reparo
        </h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Abrir Novo Chamado
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form class="d-flex align-items-center" role="search">
                <i class="bi bi-search text-muted me-3 ms-2"></i>
                <input class="form-control border-0 bg-light me-2" type="search" placeholder="Pesquisar chamados por descrição..." aria-label="Search">
                <button class="btn btn-outline-secondary px-4" type="submit">Filtrar</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-borderless align-middle mb-0">
                    <thead class="table-light text-secondary border-bottom">
                        <tr>
                            <th scope="col" class="ps-4">Código</th>
                            <th scope="col">Status</th>
                            <th scope="col">Descrição do Reparo</th>
                            <th scope="col">Imóvel</th>
                            <th scope="col" class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="ps-4 fw-semibold text-muted">#@Html.DisplayFor(modelItem => item.Id)</td>

                                <td>
                                    @* Aqui você adapta as letras 'A', 'E', 'R' para o que você definiu no Enum ou Banco de Dados *@
                                    @if (item.Status == "C")
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2"><i class="bi bi-exclamation-circle me-1"></i> Aberto</span>
                                    }
                                    else if (item.Status == "P")
                                    {
                                        <span class="badge bg-info text-dark rounded-pill px-3 py-2"><i class="bi bi-hourglass-split me-1"></i> Em Andamento</span>
                                    }
                                    else if (item.Status == "R")
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2"><i class="bi bi-check-circle me-1"></i> Resolvido</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3 py-2">@item.Status</span>
                                    }
                                </td>

                                <td class="text-truncate" style="max-width: 300px;" title="@item.Descricao">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>

                                <td>
                                    <i class="bi bi-house-door text-muted me-1"></i>
                                    @Html.DisplayFor(modelItem => item.ApelidoImovel)
                                </td>

                                <td class="text-center">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar Chamado">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <form asp-action="Resolver" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Marcar como Resolvido">
                                                <i class="bi bi-check2-all"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3 text-secondary"></i>
                    <h5 class="fw-bold">Nenhum chamado encontrado</h5>
                    <p>Não há nenhum registro de reparo no momento.</p>
                </div>
            }
        </div>
    </div>
</div>