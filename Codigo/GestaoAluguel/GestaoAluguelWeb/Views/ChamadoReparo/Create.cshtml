@model GestaoAluguelWeb.Models.ChamadoReparoModel

@{
    ViewData["Title"] = "Abrir Chamado de Reparo";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-tools me-2"></i> Novo Chamado de Reparo
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-4">
                            <div class="col-md-12">
                                <label asp-for="IdImovel" class="form-label fw-semibold">Imóvel Associado <span class="text-danger">*</span></label>

                                @* Se a lista vier vazia por algum motivo, ele mostra um aviso. 
                                   Caso contrário, exibe o Dropdown. *@
                                <select asp-for="IdImovel" class="form-select bg-light" asp-items="ViewBag.IdImovel">
                                    <option value="">-- Selecione o Imóvel --</option>
                                </select>
                                <span asp-validation-for="IdImovel" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Tipo" class="form-label fw-semibold"></label>
                                <select id="Tipo" name="Tipo" class="form-select">
                                    <option value="">Selecione o problema...</option>
                                    <option value="Encanação">Encanação</option>
                                    <option value="Elétrica">Elétrica</option>
                                    <option value="Estrutural">Estrutural</option>
                                    <option value="Automação">Automação</option>
                                    <option value="Ar Condicionado">Ar Condicionado / Climatização</option>
                                    <option value="Infiltração">Infiltração / Umidade</option>
                                    <option value="Marcenaria">Marcenaria / Móveis</option>
                                    <option value="Fechaduras e Esquadrias">Esquadrias / Fechaduras</option>
                                    <option value="Pintura">Pintura</option>
                                    <option value="Eletrodomésticos">Eletrodomésticos</option>
                                    <option value="Outros">Outros</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold text-muted">Aviso</label>
                                <div class="alert alert-warning py-2 mb-0">
                                    <i class="bi bi-info-circle me-1"></i> Descreva o problema com o máximo de detalhes.
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Descricao" class="form-label fw-semibold">Descrição do Problema <span class="text-danger">*</span></label>
                                <textarea asp-for="Descricao" class="form-control bg-light" rows="5" placeholder="Ex: O encanamento da pia da cozinha está com vazamento..."></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 border-top pt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Registrar Chamado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}