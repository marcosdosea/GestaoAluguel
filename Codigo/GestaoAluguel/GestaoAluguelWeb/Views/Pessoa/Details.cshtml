@model GestaoAluguelWeb.Models.PessoaModel

@{
    ViewData["Title"] = "Detalhes";
    string imgSrc;
    Boolean isnull = Model.Foto != null;
    Boolean isValidImage = isnull && Model.Foto.Length > 0;

    if (isValidImage)
    {
        var base64 = Convert.ToBase64String(Model.Foto);
        imgSrc = $"data:image/jpeg;base64,{base64}";
    }
    else
    {
        imgSrc = Url.Content("~/img/avatar.webp"); // caminho da imagem genérica
    }
    
}

<h2 class="text-center mb-4">Consultar Usuário</h2>

<form class="align-items-center">
    <div class="container">
        <div class="col-md-2 mb-3">
            <label for = " Foto">Foto de perfil</label>
            <img src="@imgSrc" alt="Foto de perfil" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        </div>
        <div class="row">
            
            <div class="col-md-10">

                <div class="row">

                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Nome">Nome completo *</label>
                        <input asp-for="Nome" class="form-control" readonly />
                    </div>
                    <div class="col-md-2 form-group mb-3">
                        <label asp-for="Nascimento" class="control-label"></label>
                        <input asp-for="Nascimento" class="form-control" readonly/>
                    </div>

                    <div class="col-md-4 form-group mb-3">
                        <label for="Email">Email *</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                </div>
                

                <div class="row">
                    <div class="col-md-4 form-group mb-3">
                        <label for="Cpf">CPF *</label>
                        <input asp-for="Cpf" class="form-control" readonly />
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label for="Rg">RG</label>
                        <input asp-for="Rg" class="form-control" readonly />
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label for="Telefone">Telefone *</label>
                        <input asp-for="Telefone" class="form-control" readonly />
                    </div>
                </div>

                

                <div class="row">
                    <div class="col-md-2 form-group mb-3">
                        <label for="EstadoCivil">Estado Civil</label>
                        <select asp-for="EstadoCivil" id="EstadoCivil" name="EstadoCivil" class="form-control" disabled>
                            <option value="S">Solteiro(a)</option>
                            <option value="C">Casado(a)</option>
                            <option value="D">Divorciado(a)</option>
                            <option value="U">União Estável</option>
                            <option value="V">Viúvo(a)</option>
                        </select>
                    </div>

                    <div class="col-md-6 form-group mb-3">
                        <label for="NomeConjuge">Nome do(a) cônjuge *</label>
                        <input asp-for="NomeConjuge" class="form-control" readonly />
                    </div>

                    <div class="col-md-4 form-group mb-3">
                        <label for="Profissao">Profissão *</label>
                        <input asp-for="Profissao" class="form-control" readonly />
                    </div>
                    
                </div>

                <div class="row">
                    <div class="col-md-4 form-group mb-3">
                        <label for="Cep">CEP *</label>
                        <input asp-for="Cep" class="form-control" readonly />
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label for="Uf">UF</label>
                        <select asp-for="Uf" id="UF" name="UF" class="form-control" disabled>
                            <option value="AC">Acre</option>
                            <option value="AL">Alagoas</option>
                            <option value="AP">Amapá</option>
                            <option value="AM">Amazonas</option>
                            <option value="BA">Bahia</option>
                            <option value="CE">Ceará</option>
                            <option value="DF">Distrito Federal</option>
                            <option value="ES">Espírito Santo</option>
                            <option value="GO">Goiás</option>
                            <option value="MA">Maranhão</option>
                            <option value="MT">Mato Grosso</option>
                            <option value="MS">Mato Grosso do Sul</option>
                            <option value="MG">Minas Gerais</option>
                            <option value="PA">Pará</option>
                            <option value="PB">Paraíba</option>
                            <option value="PR">Paraná</option>
                            <option value="PE">Pernambuco</option>
                            <option value="PI">Piauí</option>
                            <option value="RJ">Rio de Janeiro</option>
                            <option value="RN">Rio Grande do Norte</option>
                            <option value="RS">Rio Grande do Sul</option>
                            <option value="RO">Rondônia</option>
                            <option value="RR">Roraima</option>
                            <option value="SC">Santa Catarina</option>
                            <option value="SP">São Paulo</option>
                            <option value="SE">Sergipe</option>
                            <option value="TO">Tocantins</option>
                        </select>
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label for="Cidade">Cidade *</label>
                        <input asp-for="Cidade" class="form-control" readonly />
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-3 form-group mb-3">
                        <label for="Bairro">Bairro *</label>
                        <input asp-for="Bairro" class="form-control" readonly />
                    </div>
                    <div class="col-md-7 form-group mb-3">
                        <label for="Logradouro">Logradouro *</label>
                        <input asp-for="Logradouro" class="form-control" readonly />
                    </div>
                    <div class="col-md-2 form-group mb-3">
                        <label for="Numero">Número *</label>
                        <input asp-for="Numero" class="form-control" readonly />
                    </div>


                </div>

            </div>

            <div class="d-flex justify-content-start gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="background-color: #6c63ff; border-color: #6c63ff;">Editar</a>
                <a href="#" class="btn btn-danger">Encerrar locação</a> <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</form>