@using GestaoAluguelWeb.Helpers
@model GestaoAluguelWeb.Models.ImovelModel

@{
    ViewData["Title"] = "Delete";

    string imgSrc;
    Boolean isNotNull = Model != null && Model.Foto != null;
    Boolean isValidImage = isNotNull && Model.Foto.Length > 0;

    if (isValidImage)
    {
        imgSrc = FileHelper.GetDataUrl(Model.Foto);

    }
    else
    {
        var textoPlaceholder = System.Net.WebUtility.UrlEncode(Model.Apelido ?? "Imovel");
        imgSrc = $"https://placehold.co/600x400/e9ecef/6c757d?text={textoPlaceholder}";
    }

}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @* Card de Alerta *@
            <div class="card border-danger shadow rounded-3 mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Atenção: Exclusão de Imóvel</h4>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-danger fw-bold mb-3">Você tem certeza que deseja excluir este imóvel?</h5>
                    <p class="text-muted">
                        Se este imóvel já tiver um histórico de locações, ele será apenas desativado para preservar os dados financeiros. Caso contrário, ele será excluído permanentemente do banco de dados.
                    </p>
                </div>
            </div>

            @* Card com os Dados do Imóvel para confirmação visual *@
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold border-bottom pb-2 mb-3">Resumo do Imóvel</h5>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Foto" class="form-label"></label>
                        <div class="row">

                            <img src="@imgSrc"
                                 alt="Imagem de @Model.Apelido" class="img-thumbnail mb-2" style="width: 150px; height: 150px; object-fit: cover;" />
                        </div>

                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Apelido</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Apelido</dd>

                        <dt class="col-sm-4 text-muted">Endereço</dt>
                        <dd class="col-sm-8">@Model.Logradouro, @Model.Numero - @Model.Bairro</dd>

                        <dt class="col-sm-4 text-muted">Cidade/UF</dt>
                        <dd class="col-sm-8">@Model.Cidade - @Model.Uf</dd>
                    </dl>

                    <hr class="my-4 text-muted">

                    @* Botões de Ação *@
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IdProprietario" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                <i class="bi bi-trash-fill me-1"></i>Confirmar Exclusão
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
