@model IEnumerable<Core.Imovel>

@{
    ViewData["Title"] = "Imóveis";
}

<h1 class="text-center">Imóveis</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body position-relative">
                    <h5 class="card-title">@item.Apelido</h5>
                    <p class="card-text">
                        <strong>Endereço:</strong> @item.Logradouro, @item.Numero <br />
                        <strong>Status:</strong> @(item.EstaAlugado == 1 ? "Alugado" : "Disponível")
                    </p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-warning col-12 mb-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    @if (item.EstaAlugado != 1)
                    {
                        <a class="btn btn-sm btn-danger col-12 mb-2"
                           href="#"
                           data-bs-toggle="modal"
                           data-bs-target="#deleteModal"
                           data-id="@item.Id"
                           data-action="@Url.Action("Delete", new { id = item.Id })">
                           Excluir
                        </a>
                        <a class="btn btn-sm btn-success col-12 mb-2"
                           asp-controller="Locacao"
                           asp-action="Create"
                           asp-route-idImovel="@item.Id">
                           Alugar Imóvel
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<p class="text-end mt-3">
    <a class="btn btn-success btn-sm" asp-action="Create">
        <i class="bi bi-plus"></i>
    </a>
</p>

<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title text-white" id="deleteModalLabel">Confirmar Exclusão</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        Tem certeza que deseja excluir este imóvel?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form id="deleteForm" method="post">
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var action = button.getAttribute('data-action');
        var form = document.getElementById('deleteForm');
        form.action = action;
    });
</script>
}
